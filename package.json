  "devDependencies": {
    "@tailwindcss/typography": "^0.5.8",
    "browser-sync": "^2.27.11",
    "cssnano": "^5.1.14",
    "html-includes": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.20",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.0.0",
    "postcss-preset-env": "^7.8.3",
    "prettier": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "tailwindcss": "^3.2.4"
